# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3300
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password_here
DB_NAME=gymkhana

# JWT Configuration (Generate a strong random secret key)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRY=1h

# Session Configuration (Generate a strong random secret key)
SESSION_SECRET=your_session_secret_key_here_minimum_32_characters

# Google OAuth Configuration (Optional)
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3300/auth/google/callback

# Email Configuration (Optional - for nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3000
